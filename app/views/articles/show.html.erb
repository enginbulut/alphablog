<div class="card">
    <div class="card-header center">
        <h2 class="card-title article-title"><strong><%= @article.title %></strong></h2>
    </div>
    <div class="card-body">
        <%= simple_format(@article.description) %>
        <div class="article-actions">
            <%= link_to "Back to articles listing", articles_path, class:"btn btn-xs btn-success", style:"font-size: 10px;" %>
            <%= link_to "Edit this article", edit_article_path(@article), class:"btn btn-xs btn-primary", style:"font-size: 10px;" %>
            <%= link_to "Delete this article", 
                article_path(@article), method: :delete, 
                data: { confim:"Are you sure you want to delete the article?"}, 
                class:"btn btn-xs btn-danger", 
                style:"font-size: 10px;" 
            %>
        </div>
    </div>
</div>




