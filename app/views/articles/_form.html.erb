

<% if @article.errors.any?%>
    <h2>The following errors prevented the article from getting created</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @article do |f| %>
    <div class="form-group row">
        <%= f.label :title, for:"inputTitle", class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= f.text_field :title, class:"form-control", id:"inputTitle", placeholder:"Title of article", autofocus:true %>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :description, for:"inputDescription", class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= f.text_area :title, class:"form-control", id:"inputDescription", placeholder:"Body of article", rows:10 %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class:"btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>
<div class="row">
    <div class="col-xs-4 col-xs-offset-4">
        <%= link_to "<<< Cancel request and return to articles listing", articles_path %>
    </div>
</div>       
