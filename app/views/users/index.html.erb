<h1 align="center">All aplha bloggers </h1>

<div align="center"><%= will_paginate list_classes: %w(pagination justify-content-center) %></div>

<% @users.each do |user| %>
    <div class="row" align="center">
        <div class="col-md-4"></div>
        <div class="col-md-4 card">
            <ul class="listing">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="article-title">
                    <%= link_to user.username, user_path(user) %>
                </li>
                <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                <% if logged_in? && current_user.admin? %>
                    <li>
                        <%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm:"Are you sure you want to delete the user and all its articles?"}, class:"btn btn-xs btn-danger", style:"font-size: 10px;" %>
                    </li>
                <% end %>
            </ul>
        </div>
        <div class="col-md-4"></div>
    </div>
<% end %>

<div align="center"><%= will_paginate list_classes: %w(pagination justify-content-center) %></div>