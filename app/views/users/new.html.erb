<h1 align="center">Signup for Alpha Blog</h1>

<%= render 'shared/errors', obj:@user %>

<%= form_for @user do |f| %>
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><%= f.label :username, for:"inputUserName" %></div>
        <div class="col-sm-10">
            <%= f.text_field :username, class:"form-control", id:"inputUserName", placeholder:"Enter username...", autofocus:true %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><%= f.label :email, for:"inputEmail" %></div>
        <div class="col-sm-10">
            <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"Enter email..." %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><%= f.label :password, for:"inputPassword" %></div>
        <div class="col-sm-10">
            <%= f.password_field :password, class:"form-control", id:"inputPassword", placeholder:"Enter password..." %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Sign Up", class:"btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>
<div class="row">
    <div class="col-xs-4 col-xs-offset-4">
        <%= link_to "<<< Cancel request and return to articles listing", articles_path %>
    </div>
</div>       
