<h1 align="center">Log in</h1>

<%= form_for(:session, url:login_path) do |f| %>
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><%= f.label :email, for:"inputEmail" %></div>
        <div class="col-sm-10">
            <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"Enter email..." %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><%= f.label :password, for:"inputPassword" %></div>
        <div class="col-sm-10">
            <%= f.password_field :password, class:"form-control", id:"inputPassword", autocomplete:"off" %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class:"btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>