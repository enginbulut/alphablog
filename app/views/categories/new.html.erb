<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj:@category %>

<%= form_for @category do |f| %>
    <div class="form-group row">
        <div class="col-sm-2 col-form-label"><%= f.label :name, for:"inputCategoryName" %></div>
        <div class="col-sm-10">
            <%= f.text_field :name, class:"form-control", id:"inputCategoryName", placeholder:"Enter category name...", autofocus:true %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class:"btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>
<div class="row">
    <div class="col-xs-4 col-xs-offset-4">
        <%= link_to "<<< Cancel request and return to articles listing", articles_path %>
    </div>
</div>