<h1 align="center">Listing all categories</h1>

<div align="center"><%= will_paginate list_classes: %w(pagination justify-content-center) %></div>

<% @categories.each do |category| %>
    <div class="card">
        <div class="card-header center">
            <h2 class="card-title article-title"><strong><%= link_to "#{category.name}", category_path(category) %></strong></h2>
        </div>
    </div>
<% end %>

<div align="center"><%= will_paginate list_classes: %w(pagination justify-content-center) %></div>